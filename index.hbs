{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<!-- Page Content  -->
<div class="container">
<div class="row">

{{> "leftbar"}}

<div class="col-sm-4 mx-auto">
<br />

{{#foreach posts}}

<article class="{{post_class}}">
{{!-- <h2 class="post-home"><a href="{{url}}" title="{{title}}">{{title}}</a></h2> --}}
{{#primary_author}}<span class="post-author">Posted by <a href="{{url}}" rel="author">{{name}}</a></span>{{/primary_author}}
{{#primary_tag}}<span class="post-tags"> in <a href="{{url}}">{{name}}</a></span>{{/primary_tag}}
<P></P>
<div class="post-hl">
{{content}}
</div>
<br />
<div class="text-center">
<div class="sharebuttons btn-group">
<a class="btn btn-success read-more" href="{{url}}">💌 மேலும் படிக்க</a>
</div>
</div>
<hr>
</article>

{{/foreach}}
<br />

<div class="text-center">
{{pagination}}
</div>

</div>

{{> "sidebar"}}